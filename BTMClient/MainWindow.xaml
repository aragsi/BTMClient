<Window x:Class="BTMClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTMClient"
        xmlns:pages="clr-namespace:BTMClient.Pages"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="MainWindow">
    <Window.Background>
        <ImageBrush ImageSource="./Imgs/back10.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid 
        FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Margin="40 80">
            <pages:WelcomePage />
        </Grid>
        <Grid Grid.Row="1" Background="Black"/>
    </Grid>
</Window>
